<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivUsername"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/user"

                    />

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/email" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/padlock" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/call" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/home" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Profile"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TxtUsernamePrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="username" />

                <EditText
                    android:id="@+id/etNewUsername"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="new username"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/TxtEmailPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="username" />

                <EditText
                    android:id="@+id/etNewEmail"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="new Email"
                    android:inputType="textPersonName"
                    android:textSize="12sp"

                    />


                <TextView
                    android:id="@+id/TxtPasswordPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="username" />

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="New Password"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/TxtPhonePrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="username" />

                <EditText
                    android:id="@+id/etNewPhone"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="New Phone"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/TxtLocationPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="username" />

                <EditText
                    android:id="@+id/etNewLocation"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="New Location"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/resetProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Reset Profile" />

                <Button
                    android:id="@+id/btnLogoutAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Logout" />

            </LinearLayout>





    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/purple_700"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation_common"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>